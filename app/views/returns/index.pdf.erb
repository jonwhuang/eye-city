<%= wicked_pdf_stylesheet_link_tag "pdf" %>
<h2>Pending Returns on <%= Time.now.strftime("%B %d, %Y") %></h2>
<table class="pdf-table">
  <thead>
    <tr>
      <th>Manufacturer</th>
      <th>Brand</th>
      <th>Count</th>
      <th>RA #</th>
      <th>Date</th>
      <th>Comments</th>
    </tr>
  </thead>
  <tbody>
    <% @pending.each do |data| %>
        <td><%= data.manufacturer.name %></td>
        <td><%= data.brand.name %></td>
        <td><%= data.frame_count %></td>
        <td><%= data.auth_number %></td>
        <td class="pdf-date"><%= data.return_date.strftime("%m-%d-%Y") %></td>
        <td class="pdf-comments"><%= data.comments %></td>
      </tr>
    <% end %>
  </tbody>
</table>
