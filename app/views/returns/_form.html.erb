<%= render 'layouts/errors', object: @return %>

<p>* = required</p>

<div class="form-container return-form">
  <%= form_for @return do |f| %>
    <div class="form-group manufacturer-select">
      <%= render 'manufacturer_select' %>
    </div>
    <div class="form-group brand-select">
      <%= render 'brand_select' %>
    </div>
    <div class="form-group">
      <%= f.label :frame_count, '*Frame Count' %>
      <%= f.number_field :frame_count, step: 1 %>
    </div>
    <div class="form-group">
      <%= f.label :auth_number, '*Return authorization number' %>
      <%= f.text_field :auth_number %>
    </div>
    <div class="form-group">
      <%= f.label :return_date, '*Return authorization date' %>
      <%= f.date_field :return_date %>
    </div>
    <div class="form-group">
      <%= f.label :credit_memo_number %>
      <%= f.text_field :credit_memo_number %>
    </div>
    <div class="form-group">
      <%= f.label :credit_date %>
      <%= f.date_field :credit_date %>
    </div>
    <div class="form-group">
      <%= f.label :comments %></br>
      <%= f.text_area :comments, cols: 40, rows: 3 %>
    </div>

    <%= f.submit "Submit", class: "btn btn-primary-outline" %>
  <% end %>
</div>
